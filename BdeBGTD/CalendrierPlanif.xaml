<Window x:Class="BdeBGTD.CalendrierPlanif"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BdeBGTD"
        mc:Ignorable="d"
        Title="Bdeb GTD" Height="260" Width="350"
        ResizeMode="NoResize">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="170"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Planifier une action" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"></TextBlock>
        <Calendar Grid.Row="1" MouseDoubleClick="Calendar_MouseDoubleClick"></Calendar>
        <Button Name="Annuler" Content="Annuler" Grid.Row="2" Margin="10" Width="80" Height="20" VerticalAlignment="Top"></Button>
    </Grid>

</Window>
